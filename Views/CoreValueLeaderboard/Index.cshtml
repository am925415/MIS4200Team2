@model IEnumerable<MIS4200Team2.Models.CoreValueLeaderboard>

@{
    ViewBag.Title = "Leaderboard";
}

    <h1 style="color:orange;font-family:Arial, Helvetica, sans-serif">Centric's Employee Recognition Leaderboard</h1>


<p>

    <table class="table border-collapse table-hover">

        <tr style="background-color:orange; color:#fff;">
            <th>
                @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortParm }, new { @class = "linkcolor" })
            </th>
            <th>
                
                @Html.DisplayNameFor(model => model.Stewardship)
            </th>
            <th>
                
                @Html.DisplayNameFor(model => model.Culture)
            </th>
            <th>
                
                @Html.DisplayNameFor(model => model.Delivery_Excellence)
            </th>
            <th>
                
                @Html.DisplayNameFor(model => model.Innovation)
            </th>
            <th>
               
                @Html.DisplayNameFor(model => model.Greater_Good)
            </th>
            <th>
                
                @Html.DisplayNameFor(model => model.Integrity_And_Openness)
            </th>
            <th>
                
                @Html.DisplayNameFor(model => model.Balance)
            </th>
            
            <th></th>
        </tr>


        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserDetails.fullName)
                </td>
                <td style="text-align: center;">
                    @Html.DisplayFor(modelItem => item.Stewardship)
                </td>
                <td style="text-align: center;">
                    @Html.DisplayFor(modelItem => item.Culture)
                </td>
                <td style="text-align: center;">
                    @Html.DisplayFor(modelItem => item.Delivery_Excellence)
                </td>
                <td style="text-align: center;">
                    @Html.DisplayFor(modelItem => item.Innovation)
                </td>
                <td style="text-align: center;">
                    @Html.DisplayFor(modelItem => item.Greater_Good)
                </td>
                <td style="text-align: center;">
                    @Html.DisplayFor(modelItem => item.Integrity_And_Openness)
                </td>
                <td style="text-align: center;">
                    @Html.DisplayFor(modelItem => item.Balance)
                </td>
                
                <td>
                    @Html.ActionLink("Recognize Employee", "Edit", new { id = item.leaderboardID })
                </td>
            </tr>
        }

    </table>
</p>

